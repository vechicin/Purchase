<div class="login-page">
  <div class="login-top">
    <%= link_to "<-", url_for(:back), class: "login-links", id: "back-button" %>
    <h2 class="login-title">LOGIN</h2>
    <%= link_to "Log In", new_user_session_path, class: "login-links" %>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password" %>
    </div>


    <div class="actions">
      <%= f.submit "Log in", class: "actions", id: "submit-button" %>
    </div>

    <% if :recoverable %>
      <div class="actions">
        <%= link_to "Forgot password ?", new_user_password_path, class: "actions" %>
      </div>
    <% end %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
