<div class="login-page" id="group-index"> 
  <p style="color: green"><%= notice %></p>

  <div class="login-top">
    <h2 class="login-title">Groups</h2>
    <%= button_to "Sign out", destroy_user_session_path, method: :delete, class: "login-links", id: "signout" %>
  </div>


  <div id="groups">
    <% @groups.each do |group| %>
      <%= link_to group do %>
        <%= render group %>
      <% end %>
    <% end %>
  </div>
  
  <div class="add-button">
    <div class="button-border">
      <%= link_to "ADD GROUP", new_group_path %>
    </div>
  </div>
</div>
